<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/main">

    <!-- Konten utama scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav_container_included">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Visit -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/rounded_image"
                android:clipToOutline="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:background="@drawable/home_1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="8dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="Visit"
                        android:background="@drawable/rounded_image"
                        android:clipToOutline="true"
                        android:backgroundTint="#AFB9B8"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="16dp"
                        android:text="Find and Visit public spot in your area!"
                        android:textSize="16sp"
                        android:background="@drawable/rounded_image"
                        android:clipToOutline="true"
                        android:backgroundTint="#CDD6D5" />
                </LinearLayout>
            </FrameLayout>

            <!-- Collect -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/rounded_image"
                android:clipToOutline="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:background="@drawable/home_2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="8dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="Collect"
                        android:background="@drawable/rounded_image"
                        android:clipToOutline="true"
                        android:backgroundTint="#C3BD8E"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="16dp"
                        android:text="Search for QR Codes and scan them to fill  your collection!"
                        android:textSize="16sp"
                        android:background="@drawable/rounded_image"
                        android:clipToOutline="true"
                        android:backgroundTint="#DCD6A6" />
                </LinearLayout>
            </FrameLayout>

            <!-- Exchange -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/rounded_image"
                android:clipToOutline="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:background="@drawable/home_3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="8dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="Exchange"
                        android:background="@drawable/rounded_image"
                        android:clipToOutline="true"
                        android:backgroundTint="#9EB8D9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="16dp"
                        android:text="Exchange the stamp you have for various merchandises!"
                        android:textSize="16sp"
                        android:background="@drawable/rounded_image"
                        android:clipToOutline="true"
                        android:backgroundTint="#BDC4D7" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottom_nav_container_included"
        layout="@layout/layout_bottom_navigation_with_separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
